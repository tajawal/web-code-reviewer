# Test Configuration
# Copy this file to .env and fill in your values

# LLM Provider Configuration
CLAUDE_API_KEY=your-claude-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Test Parameters
TEST_LLM_PROVIDER=claude
TEST_PATH_TO_FILES=src/,packages/
TEST_BASE_BRANCH=master
TEST_MAX_TOKENS=2000
TEST_TEMPERATURE=0.3

# Chunking Configuration (for testing large diff handling)
TEST_CHUNK_SIZE=102400
TEST_MAX_CONCURRENT_REQUESTS=3
TEST_BATCH_DELAY_MS=1000

# GitHub Context (optional - for more realistic testing)
GITHUB_TOKEN=your-github-token-here
GITHUB_SHA=your-commit-sha-here
GITHUB_REPOSITORY=tajawal/web-code-reviewer

# Test Scenarios (optional)
TEST_SCENARIO=single-path
TEST_VERBOSE=true 